/* miniprogram/pages/note/note.wxss */
@import "../../style/flex.wxss";

page {
  color: #393e46;
  background-color: #eee;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.banner-view {
  position: relative;
  background-color: #222831; 
  height: 400rpx;
  flex-grow: 0;
  flex-shrink: 0;
  overflow: hidden;
   padding: 0 40rpx;
}

.banner {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  left: 0;
  top: 0;
  position: absolute;
  z-index: 2;
}

.banner-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1;
}


.title {
  color: #eee;
  font-size: 48rpx;
  padding-bottom: 40rpx;
}

.count {
  color: #eee;
  display: flex;
  width: 80%;
  justify-content: space-between;
}

.total {
  color: #eee;
  display: flex;
  flex-direction: column;
  padding-bottom: 24rpx;
  font-size: 36rpx;
}

.month-list {
  flex-grow: 1;
  flex-shrink: 1;
  overflow: scroll;
}

.daily-total {
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  padding: 0 40rpx;
}

.note-list {
  background-color: white;
  padding-left: 40rpx;
}
.note-list-item {
  padding: 20rpx 40rpx 20rpx 0;
  border-bottom:  1rpx solid #eee;
}

.note-list-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.note-list-item:last-child {
  border-bottom: none;
}

.note-list-item .type-name {
  font-size: 28rpx;
  color: #222831;
}

.note-list-item .remark {
  color: #393e46;
  font-size: 20rpx;
  vertical-align: bottom;
  margin-left: 20rpx;
}

.note-list-item .icon {
  margin-right: 20rpx;
}

.note-list-item .num {
  color: #00adb5;
  font-size: 32rpx;
}

.note-list-item .num.income {
  color: red;
}

.add navigator {
  position: fixed;
  display: block;
  bottom: 30rpx;
  right: 30rpx;
  background-color: #393e46;
  color: white;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  text-align: center;
  line-height: 80rpx;
  opacity: 0.8;
  font-size: 48rpx;
  cursor: pointer;
}

.footer {
  flex-grow: 0;
  flex-shrink: 0;
  text-align: center;
  font-size: 20rpx;
  color: #393e46;
  line-height: 80rpx;
}